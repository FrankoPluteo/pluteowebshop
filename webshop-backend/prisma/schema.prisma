generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Order {
  id                Int       @id @default(autoincrement())
  stripeSessionId   String    @unique
  customerEmail     String
  customerName      String?
  shippingAddress   Json      @db.Json
  totalAmount       Int
  currency          String
  items             Json      @db.Json
  paymentStatus     String?   @default("pending")
  dropshipperStatus String?   @default("not_sent")
  bigbuyOrderId     String?   @db.VarChar(255)
  stripeRefundId    String?   @db.VarChar(255)
  createdAt         DateTime? @default(now()) @db.Timestamp(6)
  updatedAt         DateTime? @default(now()) @db.Timestamp(6)
}

model products {
  id             Int      @id
  name           String?  @db.VarChar(255)
  brand          String?  @db.VarChar(255)
  description    String?
  gender         String?  @db.VarChar(50)
  image          String?  @db.VarChar(255)
  price          Decimal? @db.Decimal(10, 2)
  size           String?  @db.VarChar(50)
  attributes     Json?
  urllink        String?  @db.VarChar(255)  // BigBuy SKU
  salepercentage Int?
  stockQuantity  Int?     @default(0)       // Total available stock
  lastStockCheck DateTime? @db.Timestamp(6) // When stock was last updated
}